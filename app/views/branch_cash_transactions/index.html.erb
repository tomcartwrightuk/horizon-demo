<p style="color: green"><%= notice %></p>
<%= link_to "Reset", reset_demo_path, class: "hover:bg-red-300 text-slate-500 rounded inline-block fixed top-2 right-2" %>

<%= image_tag "post-office-logo.png", class: "w-24 ml-[-12px]" %>
<h1 class="text-lg ml-2 mt-4">Priory Post Office: Cash ledger</h1>

<table class="mt-12 w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th class="px-6 py-3">Description</th>
      <th class="px-6 py-3">Key</th>
      <th class="px-6 py-3">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @branch_cash_transactions.each do |transaction| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= transaction.description %></td>
        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= transaction.transaction_key[0..5] %></td>
        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">Â£<%= transaction.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-12">
  <%= link_to "Withdraw money", new_branch_cash_transaction_path, class: "bg-emerald-500 hover:bg-emerald-700 mx-auto text-white py-2 px-4 rounded inline-block" %><br />
</div>
