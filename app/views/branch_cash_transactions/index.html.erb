<% content_for :title do %>
  Priory Post Office
<% end %>

<p style="color: green"><%= notice %></p>
<%= link_to "Reset", reset_demo_path, class: "hover:bg-red-300 text-slate-500 rounded inline-block fixed top-2 right-2" %>

<%= image_tag "post-office-logo.png", class: "w-24 mx-auto" %>
<h1 class="text-xl mx-auto font-bold text-center mt-4">Priory Post Office</h1>
<h2 class="text-m mx-auto text-center mt-12">Cash ledger</h2>

<table class="mt-4 text-sm text-left rtl:text-right text-gray-500 w-[500px]">
  <thead class="text-xs text-gray-700 uppercase bg-gray-200">
    <tr>
      <th class="px-6 py-3">Description</th>
      <th class="px-6 py-3">Key</th>
      <th class="px-6 py-3">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @branch_cash_transactions.each do |transaction| %>
      <tr class="bg-white border-b">
        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= transaction.description %></td>
        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= transaction.transaction_key[0..5] %></td>
        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= amount_with_sign(transaction.amount) %></td>
      </tr>
    <% end %>
    <tr class="border-t-2 border-gray-700 bg-gray-100">
      <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">Cash position</td>
      <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"></td>
      <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= amount_with_sign(@total) %></td>
    </tr>
  </tbody>
</table>

<div class="mt-12 flex justify-center">
  <%= link_to "➖ Withdraw money", new_branch_cash_transaction_path, class: "text-gray-700 hover:bg-blue-200 py-2 px-4 rounded inline-block" %>
  <%= link_to "➕ Deposit money", new_branch_cash_transaction_path(deposit: true), class: "text-gray-700 hover:bg-blue-200 py-2 px-4 rounded inline-block" %>
</div>
